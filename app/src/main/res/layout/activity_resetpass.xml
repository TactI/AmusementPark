<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/et_phone"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/et_bg"
        android:textSize="20sp"
        android:maxLines="1"
        android:hint="手机号码"/>
    <EditText
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/et_code"
        android:hint="输入验证码"
        android:maxLines="1"
        android:layout_alignLeft="@+id/et_phone"
        android:layout_below="@+id/et_phone"
        android:background="@drawable/code_bg"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/get_send"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/et_code"
        android:layout_alignBottom="@+id/et_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone"
        android:background="@drawable/btn_sms"
        android:textSize="15sp"
        android:maxLines="1"
        android:padding="2dp"
        android:text="获取验证码"
        android:textColor="@android:color/white"/>
    <EditText
        android:id="@+id/et_new"
        android:hint="新密码"
        android:textSize="20sp"
        android:background="@drawable/et_bg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/get_send"
        android:maxLines="1"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_reset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_new"
        android:background="@drawable/register_btn_bg"
        android:textSize="20sp"
        android:layout_marginLeft="80dp"
        android:textColor="@android:color/white"
        android:text="修改"
        />
</RelativeLayout>